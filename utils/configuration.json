{
  "data_sources": ["fake_store"],
  "fake_store": {
    "name": "Fake Store API",
    "description": "A free API for testing and prototyping e-commerce applications.",
    "api_url": "https://fakestoreapi.com/products"
  },

  "kafka": {
      "bootstrap_servers": "localhost:9092"
    },


  "data":{
    "output_dir": "etl/data",
    "log_path": "logs/extractor.log",
    "interval_hours": 6
  },

  "metadata":{
    "output_dir": "etl/metadata",
    "topic": "meta_"
  },

  "mongo": {
    "host": "localhost",
    "port": 27017,
    "database": "ecommerce",
    "collection": "products"
  }
}
